<?xml version="1.0" encoding="UTF-8" ?>
<install version="1.0" type="plugin" group="vmpayment" >
    <name>VMPAYMENT_DRAGONPAY</name>
    <creationDate>Sept 2014</creationDate>
    <author>Dennis Paler</author>
    <authorUrl>http://www.shockwebstudio.com</authorUrl>
    <copyright>Copyright (C) 2014 All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL</license>
    <version>1.0</version>
    <description>Dragonpay payment plugin</description>
    <languages>
	<language tag="en-GB">en-GB.plg_vmpayment_dragonpay.ini</language>
    </languages>
    <files>
	<filename plugin="dragonpay">dragonpay.php</filename>
    </files>
    <params addpath="/administrator/components/com_virtuemart/elements">
	<param type="vmjpluginwarning" />
	<param name="dragonpay_merchantid" type="text" label="Dragonpay Merchant ID" description="VMPAYMENT_DRAGONPAY_MERCHANTID_EXPLAIN" />
	<param name="dragonpay_verifykey" type="text" label="Dragonpay Verify Key" description="VMPAYMENT_DRAGONPAY_VERIFYKEY_EXPLAIN" />
    <param name="status_pending" type="vmorderstate" scope="com_virtuemart" default="P" label="VMPAYMENT_DRAGONPAY_STATUS_PENDING" description="VMPAYMENT_DRAGONPAY_STATUS_PENDING_EXPLAIN" />
	<param name="status_success" type="vmorderstate" scope="com_virtuemart" default="C" label="VMPAYMENT_DRAGONPAY_STATUS_SUCCESS" description="VMPAYMENT_DRAGONPAY_STATUS_SUCCESS_EXPLAIN" />
	<param name="status_canceled" type="vmorderstate" scope="com_virtuemart" default="X" label="VMPAYMENT_DRAGONPAY_STATUS_FAILED" description="VMPAYMENT_DRAGONPAY_STATUS_FAILED_EXPLAIN" />
	</params>
</install>
